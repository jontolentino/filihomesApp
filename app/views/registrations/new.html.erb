<%= render "pages/menu" %>

<div class="register-form-container">
    <h1>Register Now</h1>
    <%= form_with model: @user, url: registrations_create_path() do |f| %>
    <p>
    <%= f.label 'email' %><br>
    <%= f.email _field :email %>
    </p>
    <p>
    <%= f.label 'password' %><br>
    <%= f.password_field :password %>
    </p>
    <p>
    <%= f.label 'password_confirmation' %><br>
    <%= f.password_field :password_confirmation %>
    </p>
    <p>
    <%= f.submit 'Sign Up' %>
    </p>
  <% end %>
</div>