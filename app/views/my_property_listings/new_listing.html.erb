<%= render "main_app_layout/appmenu" %>

<div class="my-property-listings-container">

    <h1 id="create-new-listing-h1">Create new listing</h1>
    <%= form_with model: @my_listing, url: create_listing_path(), scope: "my_listing" do |f| %>
    <p>
    <%= f.label 'title' %><br>
    <%= f.text_field :title, class: "create-listing-forms" %>
    </p>
    <p>
    <%= f.label 'location' %><br>
    <%= f.text_field :location_name, class: "create-listing-forms" %>
    </p>
    <p>
    <%= f.label 'lot area (sqm)' %><br>
    <%= f.text_field :lot_area, class: "create-listing-forms" %>
    </p>
    <p>
    <%= f.label "floor area (sqm)" %><br>
    <%= f.text_field :floor_area, class: "create-listing-forms" %>
    </p>
    <p>
    <%= f.label 'Bedroom count' %><br>
    <%= f.text_field :bedroom_count, class: "create-listing-forms" %>
    </p>
    <p>
    <%= f.label 'Bathroom count' %><br>
    <%= f.text_field :bathroom_count, class: "create-listing-forms" %>
    </p>
    <p>
    <%= f.label 'Details' %><br>
    <%= f.text_area :details, rows: 5, class: "create-listing-forms" %>
    </p>
    <p>
    <%= f.label 'Image' %><br>
    <%= f.file_field :property_image, class: "create-listing-forms" %>
    </p>
    <p>
    <%= f.submit 'Create Listing', class: "create-listing-forms-button" %>
    </p>
  <% end %>
</div>
